<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Configuration data for the app !-->

    <!-- UI !-->
    <integer name="progress_delay">500</integer>

    <!-- refresh frequencies (in seconds) !-->
    <integer name="sensor_tab_fragment_refresh_frequency_period">20</integer>
    <integer name="sensor_fragment_status_refresh_frequency_period">10</integer>
    <integer name="laundry_fragment_status_refresh_frequency_period">10</integer>

    <integer name="background_service_check_laundry_state_frequency_period">60</integer>

    <!-- sensor configuration !-->
    <item name="sensor_humidity_dry_threshold" format="float" type="dimen">50</item>
    <item name="sensor_humidity_jump_threshold" format="float" type="dimen">20</item>
    <integer name="sensor_rssi_min">-100</integer>
    <integer name="sensor_rssi_max">0</integer>

    <!-- Base station connection config!-->
    <string name="default_server_protocol">http</string>
    <string name="default_base_station_host_name">Addiss-MBP</string>
    <string name="default_server_port">8080</string>
    <string name="default_server_base_url">/basestation-tomcat/</string>

    <integer name="default_timeout_ms">15000</integer>

    <!-- Servlet urls !-->
    <string name="servlet_latest_dataPoint_by_device">data/multiple?amount=1&amp;device=</string>
    <string name="servlet_isDry">dry</string>
    <string name="servlet_dry_info">dry/info</string>
    <string name="servlet_prediction">prediction?device=</string>
    <string name="servlet_devices_available">devices?status=0</string>
    <string name="servlet_devices_connected">devices?status=1</string>
    <string name="servlet_device_connect">devices/connect?device=</string>
    <string name="servlet_device_disconnect">devices/disconnect?device=</string>

    <!-- DateTime format received from server !-->
    <string name="date_time_format_server">yyyy-MM-dd HH:mm:ss</string>

</resources>